{
    "name": "chesslines",
    "private": true,
    "version": "0.0.1",
    "author": "MaoShizhong",
    "description": "Chess opening move trainer",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MaoShizhong/chesslines"
    },
    "license": "MIT",
    "type": "module",
    "scripts": {
        "build": "npm run check && tsc -b && vite build",
        "check": "npm run lint && npm run format:check -- . && tsc --noEmit",
        "dev": "vite",
        "format": "prettier --write",
        "format:check": "prettier --check",
        "lint": "eslint .",
        "preview": "vite preview",
        "test": "vitest",
        "test:once": "vitest run"
    },
    "dependencies": {
        "@maoshizhong/chess": "^1.1.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router-dom": "^7.2.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2.0",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@vitejs/plugin-react": "^4.3.4",
        "eslint": "^9.19.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.18",
        "globals": "^15.14.0",
        "jsdom": "^26.0.0",
        "prettier": "^3.5.1",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.22.0",
        "vite": "^6.1.0",
        "vitest": "^3.0.6"
    }
}
