{
    "name": "chesslines",
    "private": true,
    "version": "0.0.1",
    "author": "MaoShizhong",
    "description": "Chess opening move trainer",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MaoShizhong/chesslines.git"
    },
    "license": "MIT",
    "type": "module",
    "scripts": {
        "build": "npm run check && tsc -b && vite build",
        "check": "npm run lint && npm run format:check -- . && tsc -b",
        "dev": "vite",
        "format": "prettier --write",
        "format:check": "prettier --check",
        "lint": "eslint .",
        "prepare": "husky",
        "preview": "vite preview",
        "test": "vitest",
        "test:once": "vitest run"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "prettier --check",
            "eslint"
        ],
        "!(*.{ts,tsx})": "prettier --check"
    },
    "dependencies": {
        "@maoshizhong/chess": "^2.2.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router": "^7.6.3",
        "zod": "^4.0.14"
    },
    "devDependencies": {
        "@csstools/postcss-global-data": "^3.0.0",
        "@eslint/js": "^9.19.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.2.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@vitejs/plugin-react": "^4.3.4",
        "blob-polyfill": "^9.0.20240710",
        "eslint": "^9.19.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.18",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jsdom": "^26.0.0",
        "lint-staged": "^16.1.2",
        "postcss-custom-media": "^11.0.6",
        "prettier": "^3.5.1",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.22.0",
        "vite": "^6.3.5",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.0.6"
    }
}
